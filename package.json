{
  "name": "tumblr-scraper",
  "productName": "Tumblr Scraper",
  "version": "2.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/lluisrojass/Tumblr-Scraper"
  },
  "description": "a utility to scrape a Tumblr profile for user uploadede posts",
  "main": "app.js",
  "scripts": {
    "min":"browserify ./components/renderer/loader.js -t babelify -g [envify --NODE_ENV=production] -g uglifyify -o ./public/js/bundle.js --verbose",
    "watch": "watchify components/renderer/loader.js -t babelify -o public/js/bundle.js --verbose",
    "simulate": "ELECTRON_ENABLE_STACK_DUMPING=1 electron app.js",
    "macbuild": "electron-packager . --icon='Resources/icon.icns' --platform=darwin --arch=x64 --electron-version='1.4.15' --app-version='1.0.0'  --ignore='(Tumblr Scraper-win32-.*|Tumblr Scraper-linux-.*)' --overwrite --osx-sign --app-bundle-id='com.builtbyluis.lluisrojass.TScraper' ",
    "linx64build": "electron-packager . --icon=icon.png --platform=linux --electron-version='1.4.15' --app-version='1.0.0' --ignore='(Tumblr Scraper-win32-.*|Tumblr Scraper-linux-.*|Tumblr Scraper-darwin-.*)' --overwrite",
    "win32build": "electron-packager . --icon=icon.png --platform=win32 --electron-version='1.4.15' --app-version='1.0.0' --ignore='(Tumblr Scraper-win32-.*|Tumblr Scraper-linux-.*|Tumblr Scraper-darwin-.*)' --overwrite"
  },
  "author": "Luis Rojas",
  "license": "MIT",
  "dependencies": {
    "htmlparser2": "^3.9.2",
    "pipe-event": "^0.1.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.0.0",
    "datejs": "^1.0.0-rc3",
    "electron": "^1.4.15",
    "electron-packager": "^8.7.1",
    "electron-reload": "^1.1.0",
    "envify": "^4.1.0",
    "expect": "^21.2.1",
    "minifyify": "^7.3.5",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "stringify": "^5.1.0",
    "uglifyify": "^4.0.5",
    "watchify": "^3.9.0"
  }
}
